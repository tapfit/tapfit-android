<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/saveToVenmoTouchView_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true" />

    <TextView
        android:id="@+id/saveToVenmoTouchView_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/saveToVenmoTouchView_checkbox"
        android:text="@string/consent_text_preamble" />

    <TextView
        android:id="@+id/saveToVenmoTouchView_howItWorks"
        android:textColor="@color/blue_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saveToVenmoTouchView_text"
        android:layout_toRightOf="@+id/saveToVenmoTouchView_checkbox"
        android:text="@string/consent_text_how_it_works"
        android:layout_marginRight="16sp"/>

    <TextView
        android:id="@+id/saveToVenmoTouchView_termsOfService"
        android:textColor="@color/blue_link"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saveToVenmoTouchView_text"
        android:layout_toRightOf="@+id/saveToVenmoTouchView_howItWorks"
        android:text="@string/consent_text_terms_of_service" />
    
</RelativeLayout>