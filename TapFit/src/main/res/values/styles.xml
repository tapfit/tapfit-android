<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="TapFit" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/TapFitActionBar</item>
        <item name="android:actionBarStyle">@style/TapFitActionBar</item>
    </style>

    <style name="TapFitActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/red</item>
        <item name="background">@color/red</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Font">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SmallFont">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#ffa52c</item>
    </style>

    <style name="SmallFont.Blue">
        <item name="android:textColor">#2c86ff</item>
    </style>

</resources>
