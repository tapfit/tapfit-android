<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/bottom_button"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bottom_button_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Workout starts in"/>

            <TextView
                android:id="@+id/button_bottom_countdown"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white" />

        </LinearLayout>

        <Button
            android:id="@+id/button_bottom_buy_button"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:layout_margin="5dp"
            android:background="@color/light_blue"
            android:text="Buy!"
            android:textColor="@color/white"/>

    </LinearLayout>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@id/bottom_button">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/place_image"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/place_image_size" />
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp" >
                <TextView
                    android:id="@+id/workout_name"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    style="@style/Font"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/workout_time"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SmallFont"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/workout_place_name"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SmallFont"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/workout_instructor"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SmallFont"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/description_header"
                    android:paddingBottom="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    style="@style/SmallFont"
                    android:textStyle="bold"
                    android:text="Class Description"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/workout_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to this cool ass place. We should kick in and get into some trouble."
                    android:background="@drawable/text_background_round" />

                <TextView
                    android:id="@+id/fine_print_header"
                    android:paddingBottom="7dp"
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SmallFont"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Fine Print"/>

                <TextView
                    android:id="@+id/fine_print_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to this cool ass place. We should kick in and get into some trouble."
                    android:background="@drawable/text_background_round" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>