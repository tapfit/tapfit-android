<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="@dimen/padding" >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/list_view_background_round">

        <include
            android:id="@+id/sign_in"
            layout="@layout/form_input"/>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/light_gray" />

        <include
            android:id="@+id/customer_support"
            layout="@layout/button_navigation"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"/>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/light_gray" />

        <include
            android:id="@+id/tapfit_info"
            layout="@layout/button_navigation"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"/>

    </LinearLayout>

</LinearLayout>