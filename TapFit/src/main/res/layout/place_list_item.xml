<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/place_image_size" >

    <ImageView
        android:id="@+id/place_image"
        android:layout_height="@dimen/place_image_size"
        android:layout_width="match_parent"
        android:maxHeight="@dimen/place_image_size"
        android:scaleType="centerCrop"
        android:fadingEdge="vertical" />

    <ImageView
        android:id="@+id/gradient"
        android:layout_height="@dimen/place_image_size"
        android:layout_width="match_parent"
        android:maxHeight="@dimen/place_image_size"
        android:scaleType="fitCenter"
        android:src="@drawable/rounded_edge" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="10dp"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/place_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            style="@style/Font" />

        <TextView
            android:id="@+id/place_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            style="@style/SmallFont"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/place_class_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallFont.Blue"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/place_distance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Font"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>



</FrameLayout>